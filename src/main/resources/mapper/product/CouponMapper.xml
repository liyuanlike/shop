<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.d2c.shop.modules.product.mapper.CouponMapper">
    <resultMap id="baseMap" type="com.d2c.shop.modules.product.model.CouponDO">

    </resultMap>

    <update id="updateConsumption">
        UPDATE p_coupon
        SET consumption=consumption + 1
        WHERE id = #{id}
        AND consumption &lt; circulation
    </update>

</mapper>